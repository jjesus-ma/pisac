<resources>

   <!-- Base application theme. -->
   <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
      <!-- Customize your theme here. -->
      <item name="colorPrimary">@color/colorPrimary</item>
      <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
      <item name="colorAccent">@color/colorAccent</item>
   </style>

   <style name="launcher" parent="AppTheme.NoActionBar">
      <item name="android:windowBackground">@drawable/launcher</item>
   </style>

   <style name="CameraTheme" parent="Theme.AppCompat">
      <item name="colorPrimary">@color/black_semi</item>
      <item name="colorPrimaryDark">@color/transparent</item>
      <item name="colorAccent">@color/red</item>
   </style>

   <style name="AppTheme.NoActionBar">
      <item name="windowActionBar">false</item>
      <item name="windowNoTitle">true</item>
   </style>

   <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

   <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

   <style name="rounded_border_green_button">
      <item name="android:background">@drawable/rounded_border_green_button</item>
      <item name="android:layout_height">25dp</item>
      <item name="android:textColor">@color/white</item>
   </style>

   <style name="rounded_border_red_button">
      <item name="android:background">@drawable/rounded_border_red_button</item>
      <item name="android:layout_height">25dp</item>
      <item name="android:textColor">@color/white</item>
   </style>
</resources>
