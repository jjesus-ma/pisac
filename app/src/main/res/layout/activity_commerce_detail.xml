<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
   xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:app="http://schemas.android.com/apk/res-auto"
   android:layout_height="match_parent"
   android:layout_width="match_parent"
   android:orientation="vertical">


<include layout="@layout/toolbar" />
<ScrollView
   xmlns:tools="http://schemas.android.com/tools" android:layout_height="match_parent"
   android:layout_width="match_parent">
<LinearLayout
   android:layout_width="match_parent"
   android:layout_height="match_parent"
   android:orientation="vertical">

   <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:gravity="center_horizontal"
      android:background="@mipmap/bg_drawer_black"
      android:orientation="vertical">

      <ImageView
         android:id="@+id/commerce_logo"
         android:layout_width="200dp"
         android:layout_height="200dp"
         android:layout_marginTop="8dp"
         android:elevation="8dp"
         android:layout_gravity="center_horizontal"/>

      <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textSize="30dp"
         android:textColor="@color/white"
         android:textStyle="bold"
         android:text="MULTINEGOCIOS"/>

      <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textSize="20dp"
         android:textColor="@color/white"
         android:text="No. Afiliación: 3934518"/>

      <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="2dp"
         android:layout_marginTop="16sp">
         <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorPrimary" />
         <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/red" />
      </LinearLayout>

      <android.support.v7.widget.CardView
         android:layout_margin="16dp"
         android:padding="16dp"
         app:cardCornerRadius="2dp"
         android:elevation="8dp"
         android:layout_width="match_parent"
         android:layout_height="wrap_content">

         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:orientation="vertical">

            <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:gravity="end"
               android:text="DATOS GENERALES"/>

            <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="8dp">

               <TextView
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:text="Dirección"/>

               <TextView
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:text="Nombre del dueño"/>

            </LinearLayout>

            <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="0dp">

               <TextView
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:text="Atemajac #342 Col. Panorama Cp. 30300"/>

               <TextView
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:text="Juan Carlos Gonzales"/>

            </LinearLayout>

            <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="8dp">

               <TextView
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:text="Nombre del ebcargado"/>

               <TextView
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:text="Tipo de comercio"/>

            </LinearLayout>

            <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="0dp">

               <TextView
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:text="Barbara Moreno"/>

               <TextView
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:text="Servicios de Coaching"/>

            </LinearLayout>
         </LinearLayout>
      </android.support.v7.widget.CardView>

      <android.support.v7.widget.CardView
         android:layout_margin="16dp"
         android:padding="16dp"
         app:cardCornerRadius="2dp"
         android:elevation="8dp"
         android:layout_width="match_parent"
         android:layout_height="wrap_content">

         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:orientation="vertical">

            <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:gravity="end"
               android:text="FOTOGRAFÍA DE LA FACHADA"/>

            <ImageView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:src="@drawable/fachada_1"
               android:layout_marginTop="8dp"
               android:scaleType="fitXY"/>

         </LinearLayout>

      </android.support.v7.widget.CardView>

   </LinearLayout>

</LinearLayout>
</ScrollView>
</LinearLayout>